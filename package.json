{
  "name": "docsify-react-live",
  "version": "1.0.0",
  "scripts": {
    "build": "gms build",
    "build:modern": "gms build --modern",
    "cache:clean": "rimraf node_modules/.cache",
    "lint": "eslint --ext .js,.jsx -f node_modules/eslint-friendly-formatter ./src || exit 0",
    "lint:fix": "eslint --ext .js,.jsx -f node_modules/eslint-friendly-formatter ./src --fix || exit 0",
    "start": "gms dev",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{css,less,sass,scss}": [
      "stylelint --fix",
      "git add"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "buble": "^0.19.8",
    "create-react-context": "^0.3.0",
    "marked": "^0.7.0",
    "prism-react-renderer": "^1.0.2",
    "prop-types": "^15.7.2",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-simple-code-editor": "^0.10.0"
  },
  "devDependencies": {
    "@gem-mine/babel-preset-app": "^2.0.0-alpha.5",
    "@gem-mine/cli-plugin-eslint": "^2.0.0-alpha.7",
    "@gem-mine/eslint-config-recommend": "^2.0.0-alpha.5",
    "@gem-mine/script": "^2.0.0-alpha.7",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "husky": "^2.7.0",
    "jest": "^24.3.1",
    "jest-enzyme": "^7.0.2",
    "lint-staged": "^7.2.2",
    "mockjs": "^1.0.1-beta3",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-standard": "^18.2.0"
  }
}
